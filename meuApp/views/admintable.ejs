 </script>
<body>

  <div class="d-flex" id="wrapper">

    <!-- Sidebar -->
    <%- include('./partials/sidebar.ejs')  %>
   

    <!-- Page Content -->
    <div id="page-content-wrapper">
      <!-- Nav-Content -->
      <%- include('./partials/header-admin.ejs')  %>
      
      <!--  Table-Content -->
      <section class="my-3 mx-2" id='table-atletas'>
        <table id="table_idhel" class="display" >
          <thead>
            <tr>
              <th>Nome/sobrenome</th>
              <th>Posição</th>
              <th>idade</th>
              <th>Perfil</th>
            </tr>
          </thead>
          <tbody>
            <% athletes.forEach( athlete => {%>
              <tr>
                <td><%=athlete.nome%></td>
                <td><%=athlete.posicao%></td>
                <td><%=athlete.id_atleta%></td>
                <td><a href="" class="btn btn-danger">Ver Perfil</a></td>
              </tr>
            <%})%>
           
          </tbody>
        </table>
      </section>
      <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Bootstrap JS CDN-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <!--Js Toggle-efect -->
    <script src="/javascripts/toggle_admin_page.js"></script>
